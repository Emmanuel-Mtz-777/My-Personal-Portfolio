	<body>
		<section class="w-full flex flex-col items-center">
			<div class="min-h-[100dvh] w-screen fixed inset-0 -z-10 bg-linear-to-r from-gray-950 via-gray-800 to-gray-950">
			<div class="absolute inset-0 -z-10 pointer-events-none">
				<Particles client:load
				particleColors={["#F97316", "#22C55E", "#C084FC"]}
				particleCount={300}
				particleSpread={10}
				speed={0.3}
				particleBaseSize={100}
				moveParticlesOnHover={false}
				/>
      		</div>
		</section>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
